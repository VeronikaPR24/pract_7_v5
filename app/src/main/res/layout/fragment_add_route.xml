<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRouteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить маршрут"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/dark_orange"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Номер маршрута"
            android:textColor="@color/orange"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etRouteNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите номер маршрута"
            android:inputType="number"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Начальная точка"
            android:textColor="@color/orange"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etStartPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите начальную точку"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Конечная точка"
            android:textColor="@color/orange"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etEndPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите конечную точку"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Расстояние"
            android:textColor="@color/orange"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите расстояние"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время в пути"
            android:textColor="@color/orange"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etEstimatedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите время в пути"
            android:inputType="number"
            android:layout_marginBottom="12dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить"
            android:background="@drawable/btn"
            android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>